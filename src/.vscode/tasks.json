{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-std=c++17",
                "-I",
                "C:\\Users\\Kim\\OneDrive\\Documents\\SFML-2.5.1\\include", // Replace this with the actual path to your SFML include folder
                "-L",
                "C:\\Users\\Kim\\OneDrive\\Documents\\SFML-2.5.1\\lib", // Replace this with the actual path to your SFML lib folder
                "-lsfml-graphics",
                "-lsfml-window",
                "-lsfml-system",
